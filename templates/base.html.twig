<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container-fluid">
                <a class="navbar-brand fs-3 text-dark" href="#">
                    <img src="{{ asset('build/images/logo.png') }}" alt="logo" width="30" height="24" class="d-inline-block align-text-top ">
                    Wild Lyon
                  </a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-end">
                  <div class="nav-item d-flex">
                    <i class="bi bi-heart" style="font-size: 1.5rem; color: dark;"></i>
                    <a class="nav-link active text-dark" aria-current="page" href="#">Favoris</a>
                  </div>
                  <div class="nav-item d-flex">
                    <i class="bi bi-person-fill" style="font-size: 2rem; color: dark;"></i>
                    <a class="nav-link active text-dark" href="#">Connexion</a>
                  </div>
                </div>
              </div>
            </div>
          </nav>
        {% block body %}{% endblock %}
    </body>
</html>
