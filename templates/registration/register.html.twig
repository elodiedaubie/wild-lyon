{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% block header %}
    {% endblock %}
    {% block banner %}
    {% endblock banner %}
    {% include "_flashmessages.html.twig" %}
    <section class= "registration-form">
        <h2 class="text-center text-dark bg-primary p-3 text-white">Inscrivez-vous</h2>
        <div class="card m-auto mb-5 mt-5 bg-secondary m-75" style="min-width:300px; max-width: 600px">
            <div class="card-body">
            {{ form_start(registrationForm) }}
                <div class="mb-3">
                    {{ form_label(registrationForm.pseudo, 'Choisissez un pseudo', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.pseudo) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.email, 'E-mail de connexion', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'ai pris connaissance des conditions d\'utilisation du site.') }}
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">S'enregistrer</button>
                </div>   
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
{% endblock %}
